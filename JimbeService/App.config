<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="JimbeService.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <userSettings>
    <JimbeService.Properties.Settings>
      <setting name="DBPath" serializeAs="String">
        <value>JimbeService.db</value>
      </setting>
    </JimbeService.Properties.Settings>
  </userSettings>

  <system.serviceModel>
    
    <client />
    <bindings>
      <basicHttpBinding>
        <binding name="LocationServiceBinding" />
      </basicHttpBinding>
    </bindings>

    <behaviors>
      <endpointBehaviors>
        <behavior name="LocationServiceBehavior">
          <callbackDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
    <services>
      <service name="JimbeService">
        <endpoint address="http://localhost:12421" behaviorConfiguration="LocationServiceBehavior"
          binding="basicHttpBinding" bindingConfiguration="LocationServiceBinding"
          contract="JimbeWFC.ServiceContract.ILocationService" />
      </service>
    </services>
  </system.serviceModel>
  
</configuration>