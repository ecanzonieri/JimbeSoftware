<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:JimbeApp" xmlns:System="clr-namespace:System;assembly=mscorlib"
	xmlns:ViewModels="clr-namespace:JimbeApp.ViewModels" x:Class="JimbeApp.AddURL"
	x:Name="Window"	
	Width="640" Height="548" DataContext="{DynamicResource Windows1ViewModel}">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="dataFromEnum"
       MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ViewModels:TaskType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" >
        <TextBox Height="32" HorizontalAlignment="Left" Margin="39,36,0,0" x:Name="FileNameTextBox"
                 VerticalAlignment="Top" Width="393" Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="White" />        
        <Button Height="48" Margin="0,0,132,8" VerticalAlignment="Bottom" Content="Salva Task" Command="{Binding AddUrl}" Click="close_window" HorizontalAlignment="Right" Width="120" />
        <ComboBox HorizontalAlignment="Left" Height="24" Margin="39,112,0,0" VerticalAlignment="Top" Width="97" ItemsSource="{Binding Mode=OneWay, Source={StaticResource dataFromEnum}}" Text="{Binding Path=Type}" />    
		<local:timespancontrol Margin="39,202,289,72" BorderThickness="2"/>
		<Label Content="URL" HorizontalAlignment="Left" Height="28" Margin="39,8,0,0" VerticalAlignment="Top" Width="97"/>
		<Label Content="Periodicità" HorizontalAlignment="Left" Height="24" Margin="40,88,0,0" VerticalAlignment="Top" Width="96"/>
		<Label Content="Intervallo di tempo" HorizontalAlignment="Left" Height="26" Margin="39,176,0,0" VerticalAlignment="Top" Width="128"/>
		<Button Height="48" Margin="0,0,8,8" VerticalAlignment="Bottom" Content="Annulla" Click="close_window" Focusable="False" ToolTip="Salva i nuovi cambiamenti del task" HorizontalAlignment="Right" Width="120" IsCancel="True" /> 
	</Grid>
</UserControl>