<Window x:Class="JimbeApp.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		xmlns:localVM="clr-namespace:JimbeApp.ViewModels"
        xmlns:localConverters="clr-namespace:JimbeApp.Converters"
        Title="JimbeApp"
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="700" MinHeight="400" MinWidth="500">
    <Window.Resources>
        <localVM:MainWindowViewModel x:Key="Windows1ViewModel" />
        <localConverters:IsBiggerThanConverter x:Key="IsBiggerThanConverter" />
    </Window.Resources>
    <ScrollViewer>
    <Grid DataContext="{StaticResource Windows1ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Logo of Application-->

            <StackPanel Grid.ColumnSpan="2" Background="DarkSlateGray">            
            
        </StackPanel>
        
        <!-- panel containing all controls-->
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical"                                                                              
                    
                    
                    Background="WhiteSmoke">
            
            <Button Command ="{Binding wifi}" Height="120" Width="110" Margin="20">
                <StackPanel  Orientation="Vertical" >
                    <Image Source="/Images/wifi.png" Height="92" Width="91" /><!--can be optimized usingDecodepixelwidth-->
                    <TextBlock Text="Button1" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            </StackPanel>

       <!--stack panel of dinamic part--> 
       <StackPanel Grid.Column="1" Grid.Row="1" x:Name="AppContent" Background="LemonChiffon" >
            <ItemsControl ItemsSource="{Binding ContentObjects}" />            
        </StackPanel>
       

    </Grid>
        </ScrollViewer>
</Window>
